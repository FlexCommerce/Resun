            <div class="column columns-three-right">
                {{widget('content', 'c3-header', {"content":"<h3>Lorem ipsum at</h3>"})|raw}}
                {{widget('content', 'c3-content', {"content":"<p>Aliquam erat ac ipsum. Integer aliquam purus. Quisque lorem tortor fringilla sed, vestibulum id, eleifend</p>"})|raw}}
                {{widget('button', 'c3-button', {text:'SHOW SITE', 'align':'widget-align-center'})|raw}}
